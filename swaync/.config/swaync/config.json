{
  "$schema": "/etc/xdg/swaync/configSchema.json",
  "layer": "overlay",
  "control-center-layer": "top",
  "layer-shell": true,
  "control-center-width": 520,
  "control-center-margin-top": 0,
  "control-center-margin-bottom": 0,
  "control-center-margin-right": 0,
  "control-center-margin-left": 0,
  "notification-2fa-action": true,
  "notification-inline-replies": false,
  "notification-window-width": 380,
  "notification-icon-size": 48,
  "notification-body-image-height": 240,
  "notification-body-image-width": 240,
  "timeout": 8,
  "timeout-low": 4,
  "timeout-critical": 0,
  "fit-to-screen": true,
  "keyboard-shortcuts": true,
  "image-visibility": "when-available",
  "transition-time": 150,
  "hide-on-clear": true,
  "hide-on-action": true,
  "script-fail-notify": true,
  "widgets": [
    "mpris",
    "title",
    "volume",
    "notifications",
    "backlight",
    "buttons-grid"
  ],
  "widget-config": {
    "title": {
      "text": "Notifications",
      "clear-all-button": true,
      "button-text": "Clear"
    },
    "mpris": {
      "image-size": 80,
      "image-radius": 10
    },
    "volume": {
      "label": "",
      "step": 5
    },
    "backlight": {
      "label": "󰃞",
      "step": 5
    },
    "buttons-grid": {
      "actions": [
        {
          "label": " ",
          "type": "toggle",
          "active": true,
          "command": "sh -c '[[ $SWAYNC_TOGGLE_STATE == true ]] && iwctl adapter phy0 set-property Powered on || iwctl adapter phy0 set-property Powered off'",
          "update-command": "sh -c '[[ $(iwctl adapter phy0 show | grep Powered) == *\"on\"* ]] && echo true || echo false'",
          "tooltip": "WiFi"
        },
        {
          "label": "",
          "command": "bluetui",
          "tooltip": "Bluetooth"
        },
        {
          "label": "󰂛",
          "command": "swaync-client -d",
          "type": "toggle",
          "tooltip": "DND"
        }
      ]
    }
  }
}
